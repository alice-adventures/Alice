with "../config/alice_config.gpr";

project Alice_Unit_Test is

   for Main use ("alice_unit_test.adb");

   for Create_Missing_Dirs use "True";
   for Source_Dirs use ("../source/unit/**");
   for Object_Dir  use "../build/obj";
   for Exec_Dir    use "../build/bin";

   package Compiler is
      for Default_Switches ("Ada") use Alice_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Builder is
      for Executable ("alice_test") use "alice_test";
   end Builder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Alice_Unit_Test;
